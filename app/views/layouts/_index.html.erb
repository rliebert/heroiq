<%= content_tag :div, class: ['jumbotron', 'jt-'+@imagenum.to_s] do %>
	<div class="container">
	<!--
		<p class="notice"><%= notice %></p>
       	<p class="alert"><%= alert %></p>
     -->
       	<% flash.each do |name, msg| %>
			<% if msg.is_a?(String) %>
				<div class="alert alert-<%= name.to_s == "notice" ? "success" : "danger" %> alert-dismissable">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<%= content_tag :div, msg, :id => "flash_#{name}" %>
				</div>
			<% end %>
		<% end %>

		<div class="intro-area">
			<% if @left_biased_images.include?(@imagenum) %>
				<h1 class="col-md-4 left-biased-image">
			<% else %>
				<h1 class="col-md-4">
			<% end %>
					Local Guitars on Demand  <%# <------- Main tagline %>
				</h1>
		</div>
	</div>
<% end %>
<div class="content-wrapper">
	<div class="container">
		<%= yield %> <%# <----- Rest of HTML content defined in '/pages/index.html' %>
	</div>
</div> 