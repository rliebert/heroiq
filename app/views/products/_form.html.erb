<%= nested_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :photos %><br>
    <div class="indented">
      <%= f.fields_for :photos do |photo_form| %>
        <%= photo_form.file_field :image %>
        Caption: <%= photo_form.text_area :caption %><br>
        <%= photo_form.link_to_remove "Remove this photo" %><br><br>
      <% end %>
    </div>
    <p><%= f.link_to_add "Add a photo", :photos %></p>
  </div>
  <div class="field">
    <%= f.label :prod_type %><br>
    <%= f.text_field :prod_type %>
  </div>
  <div class="field">
    <%= f.label :brand_name %><br>
    <%= f.text_field :brand_name %>
  </div>
  <div class="field">
    <%= f.label :prod_name %><br>
    <%= f.text_field :prod_name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
